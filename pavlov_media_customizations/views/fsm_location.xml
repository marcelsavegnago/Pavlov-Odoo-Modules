<odoo>
  <!-- Inherit main res_partner form -->
  <record id="pavlov_media_fsm_location_inherit_view_form" model="ir.ui.view">
    <field name="model">fsm.location</field>
    <field name="inherit_id" ref="fieldservice.fsm_location_form_view"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//page[@id='others-page']" position="inside">
          <group name="infrastructure" string="Infrastructure" colspan="2" col="4">
            <field name="buildings"/>
            <field name="building_type"
                   widget="selection"/>
            <field name="units"/>
            <field name="resident_type"
                   widget="selection"/>
            <field name="beds"/>
            <field name="clubhouse_buildings"/>
            <field name="maintenance_buildings"/>
            <field name="retail_spaces"/>
          </group>
        </xpath>
      </data>
    </field>
  </record>
</odoo>
