<odoo>
  <!-- Form View -->
  <record model="ir.ui.view" id="project_enhancement_autoforecast_task_view_form" >
    <field name="name">project.task.enhancement.autoforecast.form</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field eval="2" name="priority"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='forecasts']" position = "replace">
          <field name="forecasts"
                 nolabel="1"
                 context="{'default_task_id': active_id, 'default_resource_hours': planned_hours, 'default_project_id': project_id}">
            <tree create="false">
              <field name="employee_id"/>
              <field name="start_date"
                     widget="date"/>
              <field name="end_date"
                     widget="date"/>
              <field name="resource_hours"/>
              <field name="time"/>
              <field name="effective_hours"/>
            </tree>
          </field>
        </xpath>
      </data>
    </field>
  </record>

</odoo>
