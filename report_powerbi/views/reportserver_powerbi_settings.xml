<odoo>
    <record id="reportserver_powerbi_settings_view2" model="ir.ui.view">
        <field name="name">Power BI Configuration</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="PowerBI Data-String" string="PowerBI" data-key="reportserver">
                    <h2>General Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="powerbi_url" string="PowerBI Report Server URL"/>
                                <div class="text-muted">
                                    Set the PowerBI Report Server URL.
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="powerbi_url" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="reportserver_powerbi_settings_action" model="ir.actions.act_window">
        <field name="name">PowerBI Configuration</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="reportserver_powerbi_settings_view2"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'reportserver'}</field>
    </record>

    <menuitem
      id="reportserver_powerbi_settings_menu"
      name="Configuration"
      parent="reportserver_powerbi_main_menu"
      web_icon="report_powerbi,static/description/icon.png"
      action="reportserver_powerbi_settings_action"/>
</odoo>
