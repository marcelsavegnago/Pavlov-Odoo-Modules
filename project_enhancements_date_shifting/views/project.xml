<odoo>
  <!-- Form View -->
  <record model="ir.ui.view" id="project_enhancement_date_shift_view_form">
    <field name="name">project.enhancement.dateshift.form</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.edit_project"/>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//header" position="inside">
          <button string="Shift Project Task Dates"
                  type="object"
                  name="shift_dates"
                  class="oe_highlight"
                  attrs="{'invisible': ['|',('old_start_date', '=', False), ('shift_task_dates', '=', False)]}"/>
        </xpath>
        <xpath expr="//group[@name='misc']" position="before">
          <group string="Shift Dates Settings" colspan="2" col="4">
            <field name="shift_task_dates"/>
          </group>
        </xpath>
        <xpath expr="//field[@name='sequence']" position="after">
          <field name="old_start_date"
                 string="OLD Start Date"
                 widget="date"/>
        </xpath>
      </data>
    </field>
  </record>

</odoo>
