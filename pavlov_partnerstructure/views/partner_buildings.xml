<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Buildings List View-->
    <record model="ir.ui.view" id="pavlov_partnerstructure.list">
      <field name="name">Buildings</field>
      <field name="model">pavlov_partnerstructure.buildings</field>
      <field name="arch" type="xml">
        <tree default_order='name desc'>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- Buildings Form View -->
    <record model="ir.ui.view" id="pavlov_partnerstructure.form">
      <field name="name">Buildings</field>
      <field name="model">pavlov_partnerstructure.buildings</field>
      <field name="arch" type="xml">
        <form string="Partner Buildings Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name" /></h1>
            </div>
            <group>
              <field name="account" string="Account"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="pavlov_partnerstructure.action_window">
      <field name="name">Buildings</field>
      <field name="res_model">pavlov_partnerstructure.buildings</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- ########################### MENU ITEMS ############################### -->
