<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- List View-->
    <record model="ir.ui.view" id="link_list_view">
      <field name="name">Link List</field>
      <field name="model">external.link</field>
      <field name="arch" type="xml">
        <tree default_order='name'>
          <field name="name"/>
          <field name="url"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="link_form_view">
      <field name="name">Link Form</field>
      <field name="model">external.link</field>
      <field name="arch" type="xml">
        <form string="Links Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name" /></h1>
            </div>
            <group>
              <field name="url"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models
    <record model="ir.actions.act_window" id="project_milestone_milestones.action_window">
      <field name="name">Milestones</field>
      <field name="res_model">project_milestones.milestones</field>
      <field name="view_mode">tree,form</field>
    </record>-->

  </data>
</odoo>
