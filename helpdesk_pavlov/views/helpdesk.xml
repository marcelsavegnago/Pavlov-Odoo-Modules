<odoo>

  <record model="ir.ui.view" id="helpdesk_ticket_form">
  <!--  <field name="name">partner.bandwidth_change</field> -->
    <field name="model">helpdesk.ticket</field>
    <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
    <field name="arch" type="xml">
      <data>
          <xpath expr="//field[@name='priority']" position="before">
            <field name="origin" widget="selection"/>
            <field name="severity" widget="selection"/>
            <field name="location_onsite"/>
          </xpath>
          <xpath expr="//field[@name='partner_id']" position="before">
            <field name="sitecode"/>
          </xpath>
          <xpath expr="//field[@name='partner_id']" position="after">
            <field name="customer_type" invisible="1"/>
            <field name="parent_location" attrs="{'invisible':[('customer_type','=','company')], 'readonly': True}"/>
          </xpath>
          <xpath expr="//field[@name='description']" position="after">
            <field name="resolution"/>
            <field name="review_reason"/>
            <notebook>
              <page string="Addresses">
                <group string="Customer Information" colspan="2" col="4" attrs="{'readonly': True}">
                  <field name="partner_id"/>
                  <field name="customer_phone"/>
                  <field name="customer_street"/>
                  <field name="customer_mobile"/>
                  <field name="customer_street2"/>
                  <field name="customer_email"/>
                  <field name="customer_city"/>
                  <field name="spacer"/>
                  <field name="customer_state"/>
                  <field name="spacer"/>
                  <field name="customer_zip"/>
                </group>
                <group string="Parent Location Information" colspan="2" col="4" attrs="{'invisible':[('parent_location','=',False)]}">
                  <field name="parent_location"/>
                  <field name="parent_location_phone"/>
                  <field name="parent_location_street"/>
                  <field name="parent_location_mobile"/>
                  <field name="parent_location_street2"/>
                  <field name="parent_location_email"/>
                  <field name="parent_location_city"/>
                  <field name="parent_location_website"/>
                  <field name="parent_location_state"/>
                  <field name="spacer"/>
                  <field name="parent_location_zip"/>
                </group>
              </page>
              <page string="Service Calls">
              </page>
           </notebook>
          </xpath>
      </data>
    </field>
  </record>

</odoo>
