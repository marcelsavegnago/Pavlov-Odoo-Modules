<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- List View-->
    <record model="ir.ui.view" id="helpdesk_topic_list_view">
      <field name="name">Helpdesk Topic List View</field>
      <field name="model">helpdesk.topic</field>
      <field name="arch" type="xml">
        <tree default_order='name'>
          <field name="ticket_type_id"/>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="helpdesk_topic_form_view">
      <field name="name">Helpdesk Topic Form</field>
      <field name="model">helpdesk.topic</field>
      <field name="arch" type="xml">
        <form string="Helpdesk topic">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name" /></h1>
            </div>
            <field name="ticket_type_id"/>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="helpdesk_action_topic">
      <field name="name">Ticket Topics</field>
      <field name="res_model">helpdesk.topic</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem
      name="Topics"
      id="helpdesk_topic_menu_1"
      parent="helpdesk.helpdesk_menu_config"
      sequence="3"
      action="helpdesk_action_topic"/>

  </data>
</odoo>
