<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- List View-->
    <record model="ir.ui.view" id="helpdesk_origin_list_view">
      <field name="name">Helpdesk Origin List View</field>
      <field name="model">helpdesk.origin</field>
      <field name="arch" type="xml">
        <tree default_order='name'>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="helpdesk_origin_form_view">
      <field name="name">Helpdesk Origin Form</field>
      <field name="model">helpdesk.origin</field>
      <field name="arch" type="xml">
        <form string="Helpdesk Origin">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name"/></h1>
            </div>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>
