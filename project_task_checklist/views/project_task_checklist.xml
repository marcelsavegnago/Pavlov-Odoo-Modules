<odoo>
    <!-- Sequences-->
    <record id="project_task_checklist_seq" model="ir.sequence">
      <field name="name">Task Checklist Sequence</field>
      <field name="code">project.task_checklist</field>
      <field name="prefix">0</field>
      <field name="padding">1</field>
    </record>

    <!-- List View-->
    <record id="project_task_checklist_view_list" model="ir.ui.view">
      <field name="name">Project task_checklist List</field>
      <field name="model">project.task_checklist</field>
      <field name="arch" type="xml">
        <tree default_order='checklist_sequence'
              editable="top"
              decoration-success="is_complete==True">
          <field name="checklist_sequence"
                 widget="handle"/>
          <field name="is_complete" string="Done"/>
          <field name="name" string="Checklist Item Name"/>
          <field name= "description"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record id="project_task_checklist_view_form" model="ir.ui.view">
      <field name="name">Project task_checklist Form</field>
      <field name="model">project.task_checklist</field>
      <field name="arch" type="xml">
        <form string="task_checklist Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name"/></h1>
            </div>
            <field name="description"/>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record id="project_task_checklist_action" model="ir.actions.act_window">
      <field name="name">Task Checklists</field>
      <field name="res_model">project.task_checklist</field>
      <field name="view_mode">tree</field>
    </record>

</odoo>
