<odoo>
  <data>
    <!-- List View-->
    <record model="ir.ui.view" id="equipment_shelf_list_view">
      <field name="name">Shelves List</field>
      <field name="model">equipment.shelf</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="Shelf Name"/>
          <field name="manufacturer"/>
          <field name="pec"/>
          <field name="ru_size"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="equipment_shelf_form_view">
      <field name="name">Shelves Form</field>
      <field name="model">equipment.shelf</field>
      <field name="arch" type="xml">
        <form string="Shelves Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name"/>
              <h1><field name="name" string="Name"/></h1>
            </div>
            <field name="manufacturer" domain="[('supplier', '=', True)]"/>
            <field name="pec"/>
            <field name="ru_size"/>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="equipment_shelf_action">
      <field name="name">Shelves</field>
      <field name="res_model">equipment.shelf</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Agreement Menu Items -->
    <menuitem
      name="Shelves"
      id="agreement_shelfs_menu"
      parent="partner_agreement_equipment_library_sub_menu"
      action="equipment_shelf_action"
      sequence="15"/>

    <!-- Maintenance/Equipment Menu Items-->
    <menuitem
      name="Shelves"
      id="equipment_shelfs_menu"
      parent="equipment_equipment_library_sub_menu"
      action="equipment_shelf_action"
      sequence="15"/>

  </data>
</odoo>
