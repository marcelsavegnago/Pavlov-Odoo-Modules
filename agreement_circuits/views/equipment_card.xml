<odoo>
  <data>
    <!-- List View-->
    <record model="ir.ui.view" id="equipment_card_list_view">
      <field name="name">Card List</field>
      <field name="model">equipment.card</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="Card Name"/>
          <field name="aka"/>
          <field name="manufacturer"/>
          <field name="size"/>
          <field name="type"/>
          <field name="pec"/>
          <field name="default_port_status"/>
          <field name="num_daughter_cards"/>
          <field name="daughter_card_label_start"/>
          <field name="port_definitions"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="equipment_card_form_view">
      <field name="name">Card Form</field>
      <field name="model">equipment.card</field>
      <field name="arch" type="xml">
        <form string="Cards Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name"/>
              <h1><field name="name" string="Name"/></h1>
            </div>
            <group>
              <field name="aka"/>
              <field name="manufacturer" domain="[('supplier', '=', True)]"/>
              <field name="pec"/>
              <field name="default_port_status"/>
              <field name="type"/>
              <field name="num_daughter_cards" attrs="{'invisible': [('type','!=','mother_card')]}"/>
              <field name="daughter_card_label_start" attrs="{'invisible': [('type','!=','mother_card')]}"/>
              <field name="size"/>
              <field name="is_spare"/>
              <field name="port_definitions"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Search View -->
    <record model="ir.ui.view" id="card_search_view">
      <field name="name">Card Search</field>
      <field name="model">equipment.card</field>
      <field name="arch" type="xml">
        <search string="Card Search">
          <filter name="filter_spares" string="Spare Cards" domain="[('is_spare','=',True)]"/>
        </search>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="equipment_card_action">
      <field name="name">Cards</field>
      <field name="res_model">equipment.card</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="equipment_card_spare_action">
      <field name="name">Spare Cards</field>
      <field name="res_model">equipment.card</field>
      <field name="context">{"search_default_filter_spares":1}</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Agreement Menu Items -->
    <menuitem
      name="Cards List"
      id="agreement_cards_menu"
      parent="partner_agreement_dcim_main_menu"
      action="equipment_card_action"
      sequence="20"/>

    <menuitem
      name="Spare Cards List"
      id="agreement_cards_spare_menu"
      parent="partner_agreement_dcim_main_menu"
      action="equipment_card_spare_action"
      sequence="25"/>

    <!-- Maintenance/Equipment Menu Items-->
    <menuitem
      name="Cards List"
      id="equipment_card_menu"
      parent="equipment_dcim_main_menu"
      action="equipment_card_action"
      sequence="20"/>

    <menuitem
      name="Spare Cards List"
      id="equipment_cards_spare_menu"
      parent="equipment_dcim_main_menu"
      action="equipment_card_spare_action"
      sequence="25"/>

  </data>
</odoo>
