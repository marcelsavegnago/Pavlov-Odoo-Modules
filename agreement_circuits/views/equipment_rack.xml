<odoo>
  <data>
    <!-- List View-->
    <record model="ir.ui.view" id="equipment_rack_list_view">
      <field name="name">Racks List</field>
      <field name="model">equipment.rack</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="Rack Name"/>
          <field name="manufacturer"/>
          <field name="style"/>
          <field name="stackable"/>
          <field name="width"/>
          <field name="depth"/>
          <field name="height"/>
          <field name="rack_units"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="equipment_rack_form_view">
      <field name="name">Racks Form</field>
      <field name="model">equipment.rack</field>
      <field name="arch" type="xml">
        <form string="racks Form">
          <sheet>
            <group colspan="2" col="6">
              <field name="name"/>
              <field name="color"/>
              <field name="rack_units"/>
              <field name="manufacturer" domain="[('supplier', '=', True)]"/>
              <field name="lockable"/>
              <field name="width"/>
              <field name="style"/>
              <field name="stackable"/>
              <field name="depth"/>
              <field name="status"/>
              <field name="rear_mount"/>
              <field name="height"/>
              <field name="mounting_position"/>
              <field name="equipment_width"/>
            </group>
            <group>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="equipment_rack_action">
      <field name="name">racks</field>
      <field name="res_model">equipment.rack</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Agreement Menu Items -->
    <menuitem
      name="Rack List"
      id="agreement_racks_menu"
      parent="partner_agreement_dcim_main_menu"
      action="equipment_rack_action"
      sequence="50"/>

    <!-- Maintenance/Equipment Menu Items-->
    <menuitem
      name="Racks List"
      id="equipment_racks_menu"
      parent="equipment_dcim_main_menu"
      action="equipment_rack_action"
      sequence="50"/>

  </data>
</odoo>
