<odoo>
  <data>
    <!-- List View-->
    <record model="ir.ui.view" id="equipment_panel_list_view">
      <field name="name">Panels List</field>
      <field name="model">equipment.panel</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="panel Name"/>
          <field name="site"/>
          <field name="location"/>
          <field name="port_count"/>

          <field name="type"/>
          <field name="status"/>
          <field name="role"/>
          <field name="nomenclature"/>
          <field name="rack"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="equipment_panel_form_view">
      <field name="name">Panels Form</field>
      <field name="model">equipment.panel</field>
      <field name="arch" type="xml">
        <form string="panels Form">
          <sheet>
            <group colspan="2" col="4">
              <field name="name"/>
              <field name="site"/>
              <field name="aka"/>
              <field name="location"/>
              <field name="status"/>
              <field name="installed"/>
              <field name="role"/>
              <field name="is_carrier_panel"/>
            </group>
            <group colspan="2" col="4">
              <field name="type"/>
              <field name="rack"/>
              <field name="port_count"/>
              <field name="rows_of_ports"/>
              <field name="nomenclature"/>
              <field name="ru_size"/>
              <field name="manufacturer"/>
              <field name="width"/>
            </group>
            <group>
              <field name="notes"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="equipment_panel_action">
      <field name="name">Panels</field>
      <field name="res_model">equipment.panel</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Agreement Menu Items -->
    <menuitem
      name="Panel List"
      id="agreement_panels_menu"
      parent="partner_agreement_equipment_panels_sub_menu"
      action="equipment_panel_action"
      sequence="20"/>

    <!-- Maintenance/Equipment Menu Items-->
    <menuitem
      name="Panel List"
      id="equipment_panels_menu"
      parent="equipment_dcim_main_menu"
      action="equipment_panel_action"
      sequence="25"/>

  </data>
</odoo>
