<odoo>
  <data>
    <!-- List View-->
    <record model="ir.ui.view" id="equipment_pluggable_list_view">
      <field name="name">Pluggable List</field>
      <field name="model">equipment.pluggable</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="pec"/>
          <field name="type"/>
          <field name="manufacturer"/>
          <field name="applicable_cards" widget="many2many2many_tags"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="equipment_pluggable_form_view">
      <field name="name">Pluggable Form</field>
      <field name="model">equipment.pluggable</field>
      <field name="arch" type="xml">
        <form string="Pluggable Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name"/>
              <h1><field name="name" string="Name"/></h1>
            </div>
            <group>
              <field name="pec"/>
              <field name="manufacturer" domain="[('supplier', '=', True)]"/>
              <field name="type"/>
              <field name="applicable_cards" widget="many2many_tags"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="equipment_pluggable_action">
      <field name="name">Pluggables</field>
      <field name="res_model">equipment.pluggable</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Agreement Menu Items -->
    <menuitem
      name="Pluggables"
      id="agreement_pluggables_menu"
      parent="partner_agreement_equipment_library_sub_menu"
      action="equipment_pluggable_action"
      sequence="40"/>

    <!-- Maintenance/Equipment Menu Items-->
    <menuitem
      name="Pluggables"
      id="equipment_pluggables_menu"
      parent="equipment_equipment_library_sub_menu"
      action="equipment_pluggable_action"
      sequence="40"/>

  </data>
</odoo>
