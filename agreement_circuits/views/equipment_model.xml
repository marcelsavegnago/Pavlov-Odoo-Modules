<odoo>
  <data>
    <!-- List View-->
    <record model="ir.ui.view" id="equipment_model_list_view">
      <field name="name">Models List</field>
      <field name="model">equipment.model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="Model Name"/>
          <field name="manufacturer"/>
          <field name="pec"/>
          <field name="ru_size"/>
          <field name="max_shelves"/>
          <field name="slots"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="equipment_models_form_view">
      <field name="name">Models Form</field>
      <field name="model">equipment.model</field>
      <field name="arch" type="xml">
        <form string="Models Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name"/>
              <h1><field name="name" string="Name"/></h1>
            </div>
            <group colspan="2" col="4">
              <field name="manufacturer" domain="[('supplier', '=', True)]"/>
              <field name="ru_size"/>
              <field name="pec"/>
              <field name="max_shelves"/>
            </group>
            <group>
              <field name="slots"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="equipment_models_action">
      <field name="name">Physical Port</field>
      <field name="res_model">equipment.model</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Agreement Menu Items -->
    <menuitem
      name="Models"
      id="agreement_models_menu"
      parent="partner_agreement_configuration_sub_menu"
      action="equipment_models_action"
      sequence="10"/>

    <!-- Maintenance/Equipment Menu Items-->
    <menuitem
      name="Models"
      id="equipment_models_menu"
      parent="equipment_configuration_sub_menu"
      action="equipment_models_action"
      sequence="10"/>

  </data>
</odoo>
