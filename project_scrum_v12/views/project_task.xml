<odoo>
  <!-- List View -->
  <record id="view_task_sprint_tree" model="ir.ui.view">
    <field name="name">project.task.sprint.tree</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_tree2"/>
    <field eval="2" name="priority"/>
    <field name="arch" type="xml">
      <field name="user_id" position="after">

      </field>
    </field>
  </record>

  <!-- Form View -->
  <record id="view_task_sprint_form" model="ir.ui.view">
    <field name="name">project.task.sprint.form</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field eval="2" name="priority"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='user_id']" position="after">
          <field name="use_scrum" invisible="1"/>
          <field name="sprint_id" attrs="{'invisible':[('use_scrum','=', False)]}"/> <!--  V12 Change: default_project to project_id -->
          <field name="story_point_estimate" attrs="{'invisible':[('use_scrum','=', False)]}"/>
        </xpath>
      </data>
    </field>
  </record>

  <!-- Kanban View -->
  <record id="view_task_sprint_kanban" model="ir.ui.view">
    <field name="name">project.task.sprint.kanban</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_kanban"/>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//div[@class='o_kanban_record_body']" position="after">
            <span class="o_value"><field name="sprint_id"/></span>
            <span class="o_value"><field name="story_point_estimate"/></span>
        </xpath>
      </data>
    </field>
  </record>

  <!-- Search View -->
  <record id="view_task_sprint_search_form" model="ir.ui.view">
    <field name="name">project.task.sprint.search.form</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_search_form"/>
    <field name="arch" type="xml">
      <field name="user_id" position="after">
        <field name="sprint_id"/>
      </field>
      <filter name="project" position="before">
        <filter string="Sprints" name="sprint" context="{'group_by':'sprint_id'}"/>
      </filter>
    </field>
  </record>

</odoo>
