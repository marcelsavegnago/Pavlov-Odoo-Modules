<odoo>
  <data>
    <!-- Sequences-->
    <record id="seq_project_scrum_source" model="ir.sequence">
      <field name="name">project_scrum_source_seq</field>
      <field name="code">project.scrum_source</field>
      <field name="prefix">0</field>
      <field name="padding">1</field>
    </record>

    <!-- List View-->
    <record model="ir.ui.view" id="project_scrum_source_list_view">
      <field name="name">Scrum Source List View</field>
      <field name="model">project.scrum_source</field>
      <field name="arch" type="xml">
        <tree editable="top">
          <field name="source_sequence" widget="handle" groups="base.group_no_one"/>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="project_scrum_source_action">
      <field name="name">Scrum Sources</field>
      <field name="res_model">project.scrum_source</field>
      <field name="view_mode">tree</field>
    </record>

    <!-- Menu Items -->
    <menuitem
      name="Sources"
      id="project_scrum_sources_menu_1"
      parent="project_scrum_main_menu"
      sequence="70"
      action="project_scrum_source_action"/>

  </data>
</odoo>
