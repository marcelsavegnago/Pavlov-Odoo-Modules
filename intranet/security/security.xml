<odoo>
  <!-- This holds the security groups -->
  <record model="ir.module.category" id="module_intranet_category">
    <field name="name">Intranet</field>
    <field name="description">User access level for Intranet SharePoint Server</field>
    <field name="sequence">4</field>
  </record>

  <record id="intranet_group_user" model="res.groups">
    <field name="name">User</field>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    <field name="category_id" ref="module_intranet_category"/>
   </record>

   <record id="intranet_group_administrator" model="res.groups">
     <field name="name">Administrator</field>
     <field name="implied_ids" eval="[(4, ref('intranet_group_user'))]"/>
     <field name="category_id" ref="module_intranet_category"/>
   </record>
</odoo>
