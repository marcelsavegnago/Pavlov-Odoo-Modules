<odoo>

    <!-- Rename fields -->
    <record id="helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <!-- Change Customer to Contact -->
            <field name="partner_id" position="attributes">
                <attribute name="string">Contact</attribute>
            </field>

            <!-- Make partner name invisible -->
            <field name="partner_name" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <!-- Make Email invisible until contact is selected -->
            <field name="partner_email" position="attributes">
                <attribute name="string">Email</attribute>
                <attribute name="attrs">{'invisible': [('partner_id', '=', False)]}</attribute>
                <attribute name="readonly">1</attribute>
                <attribute name="widget">email</attribute>
            </field>

            <!-- Add partner unit -->
            <field name="partner_email" position="before">
              <field name="partner_unit"
                     attrs="{'invisible': [('partner_id', '=', False)]}"
                     readonly="1"/>
            </field>

            <!-- Add partner phone -->
            <field name="partner_email" position="before">
              <field name="partner_phone"
                     attrs="{'invisible': [('partner_id', '=', False)]}"
                     readonly="1"
                     widget="phone"/>
            </field>

            <!-- Add partner mobile -->
            <field name="partner_email" position="before">
              <field name="partner_mobile"
                     attrs="{'invisible': [('partner_id', '=', False)]}"
                     readonly="1"
                     widget="phone"/>
            </field>

            <!-- remove create/edit abilities to scope -->
            <field name="scope_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_open': True}</attribute>
            </field>

            <!-- Move ticket type -->
            <field name="ticket_type_id" position="replace"/>
            <field name="priority" position="before">
                <field name="ticket_type_id"
                       widget="selection"
                       domain="[('scope_ids', '=', scope_id)]"/>
            </field>

            <!-- Move tags -->
            <field name="tag_ids" position="replace"/>
            <field name="priority" position="after">
                <field name="tag_ids"
                       widget="many2many_tags"
                       options="{'color_field': 'color'}"/>
            </field>

            <!-- Add partner tags -->
            <field name="sla_name" position="after">
              <field name="partner_category_id"
                     nolabel="1"
                     attrs="{'invisible': [('partner_id', '=', False)]}"
                     readonly="1"
                     widget="many2many_tags"
                     options="{'color_field': 'color'}"/>
            </field>

            <!-- Make Description required -->
            <field name="description" position="attributes">
                <attribute name="required">1</attribute>
            </field>

        </field>
    </record>

    <record id="helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_tickets_view_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="string">Contact</attribute>
            </field>
        </field>
    </record>

</odoo>
