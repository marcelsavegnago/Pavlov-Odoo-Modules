<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- floors List View-->
    <record model="ir.ui.view" id="partner_floors.list">
      <field name="name">Floors</field>
      <field name="model">pavlov_partnerstructure.floors</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="account"/>
          <field name="building"/>
        </tree>
      </field>
    </record>

    <!-- floors Form View -->
    <record model="ir.ui.view" id="partner_floors.form">
      <field name="name">Floors</field>
      <field name="model">pavlov_partnerstructure.floors</field>
      <field name="arch" type="xml">
        <form string="Partner floors Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name" /></h1>
            </div>
            <group>
              <field name="account" string="Account"/>
              <field name="building"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="partner_floors.action_window">
      <field name="name">Floors</field>
      <field name="res_model">pavlov_partnerstructure.floors</field>
      <field name="view_mode">tree,form</field>
    </record>

