<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- rooms List View-->
    <record model="ir.ui.view" id="partner_rooms.list">
      <field name="name">rooms</field>
      <field name="model">pavlov_partnerstructure.rooms</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="account"/>
          <field name="unit"/>
        </tree>
      </field>
    </record>

    <!-- rooms Form View -->
    <record model="ir.ui.view" id="partner_rooms.form">
      <field name="name">rooms</field>
      <field name="model">pavlov_partnerstructure.rooms</field>
      <field name="arch" type="xml">
        <form string="Partner rooms Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name" /></h1>
            </div>
            <group>
              <field name="account" string="Account"/>
              <field name="unit"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="partner_rooms.action_window">
      <field name="name">rooms</field>
      <field name="res_model">pavlov_partnerstructure.rooms</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>
