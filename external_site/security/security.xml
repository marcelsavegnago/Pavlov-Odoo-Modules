<odoo>
  <!-- This holds the security groups -->
  <record model="ir.module.category" id="module_external_site_category">
    <field name="name">External Sites</field>
    <field name="description">User access level for external sites</field>
    <field name="sequence">4</field>
  </record>

  <record id="external_site_group_user" model="res.groups">
    <field name="name">User</field>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    <field name="category_id" ref="module_external_site_category"/>
   </record>

   <record id="external_site_group_manager" model="res.groups">
     <field name="name">Manager</field>
     <field name="implied_ids" eval="[(4, ref('external_site_group_user'))]"/>
     <field name="category_id" ref="module_external_site_category"/>
   </record>
</odoo>
