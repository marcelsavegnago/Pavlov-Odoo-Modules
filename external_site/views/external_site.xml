<odoo>

  <!-- List View -->
  <record model="ir.ui.view" id="external_site_view_list">
    <field name="name">External Sites</field>
    <field name="model">external.site</field>
    <field name="arch" type="xml">
      <tree default_order="name">
        <field name="name"/>
        <field name="description"/>

      </tree>
    </field>
  </record>

  <!-- Form View -->
  <record model="ir.ui.view" id="external_site_view_form">
    <field name="name">External Site</field>
    <field name="model">external.site</field>
    <field name="arch" type="xml">
      <form string="External Site Form">
        <sheet>
          <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;:&quot;image_medium&quot;}"/>
          <div class="oe_title">
              <label for="name" class="oe_edit_only"/>
                <h1>
                  <field name="name"
                         placeholder="External Site Name"/>
                </h1>
          </div>
          <group>
            <field name="description"/>
            <field name="url" 
                   placeholder="https://www.google.com"
                   widget="url"/>
            <field name="action"/>
            <field name="menuitem"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <!--  <record id="external_site_url_action" model="ir.actions.act_url">
      <field name="name">Power BI Report Server</field>
      <field name="type">ir.actions.act_url</field>
      <field name="target">new</field>
      <field name="url">https://ssrs-cmi-001.pavlovmedia.corp/reports/browse/</field>
    </record> -->

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="external_site_action">
      <field name="name">External Sites</field>
      <field name="res_model">external.site</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu -->
    <menuitem name="External Sites"
              id="external_site_menu_root"
              web_icon="external_site,static/description/icon.png"
              action="external_site_action"/>
</odoo>
