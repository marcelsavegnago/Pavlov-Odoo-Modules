<odoo>
    <record model="ir.ui.view" id="report_powerbi_settings_view">
        <field name="name">Report PowerBI Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="External Sites Data-String" string="External Sites" data-key="external_site" groups="external_site.external_site_group_manager">
                    <h2>General Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="external_site_url"/>
                                <div class="text-muted">
                                    Enter the Report Server URL (PowerBI Server) *FOR TESTING PURPOSES
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="external_site_url" widget="url" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
