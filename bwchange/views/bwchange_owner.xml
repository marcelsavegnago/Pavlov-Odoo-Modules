<odoo>
  <data>
    <!-- Sequences-->
    <record id="seq_bwchange_owner" model="ir.sequence">
      <field name="name">bwchange_owner_sequencer</field>
      <field name="code">bwchange.owner</field>
      <field name="prefix">0</field>
      <field name="padding">1</field>
    </record>

    <!-- List View-->
    <record model="ir.ui.view" id="bwchange_owner_list_view">
      <field name="name">BW Change owner List View</field>
      <field name="model">bwchange.owner</field>
      <field name="arch" type="xml">
        <tree editable="top">
          <field name="owner_sequence" widget="handle" groups="base.group_no_one"/>
          <field name="name"/>
          <field name="description"/>
          <field name="id" attrs="{'readonly': True}"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="bwchange_owner_form_view">
      <field name="name">BW Change owner Form</field>
      <field name="model">bwchange.owner</field>
      <field name="arch" type="xml">
        <form string="BW Change owner">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name" /></h1>
            </div>
            <group>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="bwchange_action_owner">
      <field name="name">owners</field>
      <field name="res_model">bwchange.owner</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem
      name="Owners"
      id="bwchange_owner_menu"
      parent="bwchange_configuration_menu"
      action="bwchange_action_owner"
      sequence="30"/>

  </data>
</odoo>
