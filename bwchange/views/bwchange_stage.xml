<odoo>
  <data>
    <!-- Sequences-->
    <record id="seq_bwchange_stage" model="ir.sequence">
      <field name="name">bwchange_stage_sequencer</field>
      <field name="code">bwchange.stage</field>
      <field name="prefix">0</field>
      <field name="padding">1</field>
    </record>

    <!-- List View-->
    <record model="ir.ui.view" id="bwchange_stage_list_view">
      <field name="name">BW Change Stage List View</field>
      <field name="model">bwchange.stage</field>
      <field name="arch" type="xml">
        <tree editable="top">
          <field name="stage_sequence" widget="handle" groups="base.group_no_one"/>
          <field name="name"/>
          <field name="description"/>
          <field name="id" attrs="{'readonly': True}"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="bwchange_stage_form_view">
      <field name="name">BW Change Stage Form</field>
      <field name="model">bwchange.stage</field>
      <field name="arch" type="xml">
        <form string="BW Change Stage">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name" /></h1>
            </div>
            <group>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="bwchange_action_stage">
      <field name="name">Stages</field>
      <field name="res_model">bwchange.stage</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem
      name="Stages"
      id="bwchange_stage_menu"
      parent="bwchange_configuration_menu"
      action="bwchange_action_stage"
      sequence="10"/>

  </data>
</odoo>
