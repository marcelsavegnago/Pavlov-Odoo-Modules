<odoo>
  <report
    id="bwchange_document"
    model="bwchange.change"
    string="Bandwidth Change Document"
    name="bwchange.report_bwchange_document"
    file="bwchange.report_bwchange_document"
    report_type="qweb-pdf"/>

    <report
      id="bwchange_document_preview"
      model="bwchange.change"
      string="Bandwidth Change Document Preview"
      name="bwchange.report_bwchange_document"
      file="bwchange.report_bwchange_document"
      report_type="qweb-html"/>

      <template id="report_bwchange_document">
        <t t-name="bwchange.report_bwchange_document">
          <t t-name="bwchange.report_bwchange_document">
            <t t-call="web.html_container">
              <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                  <div class="page">
                    <div align="center">
                      <h3>Bandwidth Configuration Change Request</h3>
                    </div>
                    <br></br>
                    <h4><b>Site Name/Site Code:<span t-field="docs.partner_id"/></b></h4>
                    <br></br>

                    <h5><b>Property Circuit Details</b></h5>
                    <div class="row" >
                      <div class="col-6" style="border-style:solid;">
                        <span>Actual Transport Speed: </span>
                        <b><span t-field="docs.actual_transport" t-options='{"widget": "integer"}'/></b>
                      </div>
                      <div class="col-6" style="border-style:solid; border-left:none;">
                        <span>Circuit Land Date: </span>
                        <b><span t-field="docs.circuit_landdate"/></b>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-6" style="border-style:solid; border-top:none;">
                        <span>Circuit paid by: </span>
                        <b><span t-field="docs.circuit_paid_by"/></b>
                      </div>
                      <div class="col-6" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Circuit ID:</span>
                        <b><span t-field="docs.circuit_id"/></b>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-6" style="border-style:solid; border-top:none;">
                        <span>Sold Transport Speed/DIA Download (OffNet):</span>
                        <b><span t-field="docs.sold_transport" t-options='{"widget": "integer"}'/></b>
                      </div>
                      <div class="col-6" style="border-style:solid; border-top:none; border-left:none;">
                        <span>DIA Upload (OffNet):</span>
                        <b><span t-field="docs.dia_upload" t-options='{"widget": "integer"}'/></b>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-6" style="border-style:solid; border-top:none;">
                        <span>Tesseractive Service:</span>
                        <t t-if="doc.tesseractive_service">
                          <input type="checkbox" id="checkbox104_tesseractive_service" checked="checked"/>
                        </t>
                        <t t-if="not doc.tesseractive_service">
                          <input type="checkbox" id="checkbox105_tesseractive_service"  />
                        </t>
                      </div>
                      <div class="col-6" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Tesseractiv Speed (OnNet):</span>
                        <b><span t-field="docs.tesseractiv_speed" t-options='{"widget": "integer"}'/></b>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12" style="border-style:solid; border-top:none;">
                        <span>Site User Switch Port Speed:</span>
                        <b><span t-field="docs.user_switch"/></b>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12" style="border-style:solid; border-top:none;">
                        <span>WebSnap?</span>
                        <t t-if="doc.websnap">
                          <input type="checkbox" id="checkbox104_websnap" checked="checked"/>
                        </t>
                        <t t-if="not doc.websnap">
                          <input type="checkbox" id="checkbox105_websnap"  />
                        </t>
                      </div>
                    </div>

                    <br></br>
                    <h5><b>Current MDF Equipment</b></h5>
                    <div class="row" >
                      <div class="col-6" style="border-style:solid;">
                        <span>Router: </span>
                        <b><span t-field="docs.router"/></b>
                      </div>
                      <div class="col-6" style="border-style:solid; border-left:none;">
                        <span>MikroTik: </span>
                        <b><span t-field="docs.circuit_landdate"/></b>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-6" style="border-style:solid; border-top:none;">
                        <span>Internal Core Switch (Site Backbone): </span>
                        <b><span t-field="docs.core_switch"/></b>
                      </div>
                      <div class="col-6" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Distro Switch (Between Buildings):</span>
                        <b><span t-field="docs.distro_switch"/></b>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-3" style="border-style:solid; border-top:none;">
                        <span>Trunked?</span>
                        <t t-if="doc.trunked">
                          <input type="checkbox" id="checkbox104_trunked" checked="checked"/>
                        </t>
                        <t t-if="not doc.trunked">
                          <input type="checkbox" id="checkbox105_trunked"  />
                        </t>
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Needs Update?</span>
                        <t t-if="doc.needs_update">
                          <input type="checkbox" id="checkbox104_needs_update" checked="checked"/>
                        </t>
                        <t t-if="not doc.needs_update">
                          <input type="checkbox" id="checkbox105_needs_update"  />
                        </t>
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Verified By:</span>
                        <b><span t-field="docs.verified_by"/></b>
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Date:</span>
                        <b><span t-field="docs.verified_date"/></b>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12" style="border-style:solid; border-top:none;">
                        <span>Additional Info:</span>
                        <b><span t-field="docs.additional_information"/></b>
                      </div>
                    </div>

                    <br></br>
                    <h5><b>User/Unit Experience</b></h5>
                    <div class="row" >
                      <div class="col-12" style="border-style:solid;">
                        <span>WebSnap Download Speed: </span>
                        <b><span t-field="docs.websnap_download" t-options='{"widget": "integer"}'/></b>
                      </div>
                    </div>
                    <div class="row" >
                      <div class="col-3" style="border-style:solid; border-top:none;">
                        <span>Individual User/Unit Package Speed: </span>
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Download Mbps: </span>
                        <b><span t-field="docs.package_download" t-options='{"widget": "integer"}'/></b>
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none; border-right:none;">
                        <span>Upload Mbps: </span>
                        <b><span t-field="docs.package_upload" t-options='{"widget": "integer"}'/></b>
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none;">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-3" style="border-style:solid; border-top:none;">
                        <span>Unregistered Speeds</span>
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Tesseractiv (Mbps):</span>
                        <b><span t-field="docs.unregistered_tesseractiv" t-options='{"widget": "integer"}'/></b>
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none;">
                        <span>WebSnap (Mbps):</span>
                        <b><span t-field="docs.unregistered_websnap" t-options='{"widget": "integer"}'/></b>
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Down/Up (Mbps):</span>
                        <b><span t-field="docs.unregistered_download" t-options='{"widget": "integer"}'/>/</b>
                        <b><span t-field="docs.unregistered_upload" t-options='{"widget": "integer"}'/></b>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-3" style="border-style:solid; border-top:none; ">
                        <span>Reason for Package Change:</span>
                        <br><span>(If this is just a package change request)</span></br>
                      </div>
                      <div class="col-9" style="border-style:solid; border-top:none; border-left:none;">
                        <b><span t-field="docs.reason_for_change"/></b>
                      </div>
                    </div>

                    <br></br>
                    <h5><b>Contract Information</b></h5>
                    <div class="row" >
                      <div class="col-6" style="border-style:solid;">
                        <span>Contract Executed Date: </span>
                        <br><span>(When Contract/Addendum was signed)</span></br>
                      </div>
                      <div class="col-6" style="border-style:solid; border-left:none;">
                        <b><span t-field="docs.contract_signed_date"/></b>
                      </div>
                    </div>

                    <br></br>
                    <h5><b>Approvals</b></h5>
                    <div class="row" >
                      <div class="col-3" style="border-style:solid;">
                        <span>Requestor: </span>
                      </div>
                      <div class="col-6" style="border-style:solid; border-left:none;">
                      </div>
                      <div class="col-3" style="border-style:solid; border-left:none;">
                        <span>Date:</span>
                      </div>
                    </div>
                    <div class="row" >
                      <div class="col-3" style="border-style:solid; border-top:none;">
                        <span>Approved (Legal): </span>
                      </div>
                      <div class="col-6" style="border-style:solid; border-top:none; border-left:none;">
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Date:</span>
                      </div>
                    </div>
                    <div class="row" >
                      <div class="col-3" style="border-style:solid; border-top:none;">
                        <span>Approved (CEO): </span>
                      </div>
                      <div class="col-6" style="border-style:solid; border-top:none; border-left:none;">
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Date:</span>
                      </div>
                    </div>
                    <div class="row" >
                      <div class="col-3" style="border-style:solid; border-top:none;">
                        <span>Approved (GM/VP if CEO is N/A): </span>
                      </div>
                      <div class="col-6" style="border-style:solid; border-top:none; border-left:none;">
                      </div>
                      <div class="col-3" style="border-style:solid; border-top:none; border-left:none;">
                        <span>Date:</span>
                      </div>
                    </div>
                  </div>
                </t>
              </t>
            </t>
          </t>
        </t>
      </template>
</odoo>
