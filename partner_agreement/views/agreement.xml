<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Buildings List View-->
    <record model="ir.ui.view" id="partner_agreement_list_view">
      <field name="name">Agreement List</field>
      <field name="model">partner_agreement.agreement</field>
      <field name="arch" type="xml">
        <tree default_order='name'>
          <field name="name" string="Agreement Name"/>
          <field name="account" string="Account"/>
        </tree>
      </field>
    </record>

    <!-- Buildings Form View -->
    <record model="ir.ui.view" id="partner_agreement_form_view">
      <field name="name">Agreement Form</field>
      <field name="model">partner_agreement.agreement</field>
      <field name="arch" type="xml">
        <form string="Agreements Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Agreement Name" />
              <h1><field name="name" string="Agreement Name" /></h1>
            </div>
            <header>
              <button string="New Version" type="object" name="create_new_version"/>
            </header>
            <group colspan="2" col="6">
              <field name="account" string="Account" required="True" help="Select the customer or vendor account this agreement is related to."/>
              <field name="type" string="Agreement Type" widget="selection" help="Select the type of agreement."/>
              <field name="status" string="Status" widget="selection" requried="True" help="Select the current status of the agreement."/>
              <field name="parent_agreement" string="Master Agreement" domain="[('account', '=', account)]" help="Link this agreement to a parent agreement. For example if this agreement is an amendment to another agreement. This list will only show other agreements related to the same account."/>
              <field name="subtype" string="Sub-Type" widget="selection" domain="[('agreement_type', '=', type)]" help="Select the sub-type of this agreement. Sub-Types are related to agreement types."/>
              <field name="account_manager" string="Account Manager" help="Select the user who manages this agreement."/>
              <field name="description" string="Description" help="Description of the agreement"/>
              <field name="start_date" string="Start Date" requried="True" help="When the agreement starts."/>
              <field name="end_date" string="End Date" requried="True" help="When the agreement ends."/>
              <field name="is_template" string="Is a Template?" help="Make this agreement a template."/>
            </group>
              <notebook>
                  <page string="Sections">
                    <group colspan="2" col="2" default_order='section_sequence'>
                        <field name="sections">
                        <tree default_order='section_sequence'>
                            <field name="section_sequence" string="Sequence" widget="handle"/>
                            <field name="name" string="Section Name" />
                        </tree>
                        </field>
                    </group>
                  </page>
                  <page string="Clauses">
                    <group colspan="2" col="2" default_order='section, clause_sequence'>
                        <field name="clauses">
                        <tree default_order='section, clause_sequence'>
                            <field name="clause_sequence" string="Sequence" widget="handle"/>
                            <field name="section" string="Section"/>
                            <field name="name" string="Clause Name" />
                        </tree>
                        </field>
                    </group>
                  </page>
                  <page string="Products">
                  </page>
                  <page colspan="2" col="4" string="Service Profiles">
                    <field name="serviceprofiles"/>
                  </page>
              </notebook>
                      Version: <field name="version" string="Version" readonly="True"/>.<field name="revision" string="Revision" readonly="True"/>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Buildings Search View -->
    <record model="ir.ui.view" id="partner_agreement_search_view">
      <field name="name">Agreement Search</field>
      <field name="model">partner_agreement.agreement</field>
      <field name="arch" type="xml">
        <search string="Agreement Search">
          <filter name="group_account" string="Accounts" icon="terp-partner" context="{'group_by':'account'}"/>
        </search>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="partner_agreement_agreement">
      <field name="name">Agreements</field>
      <field name="res_model">partner_agreement.agreement</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- ########################### MENU ITEMS ############################### -->
        <!-- Top menu item -->
        <menuitem name="Agreements" id="partner_agreement.menu_root" web_icon="partner_agreement,static/description/icon.png" sequence="51"/>

        <!-- menu categories -->
        <menuitem
          name="Agreements"
          id="partner_agreement.menu_1"
          parent="partner_agreement.menu_root"
          action="partner_agreement_agreement"/>
        <menuitem
          name="Agreement Parts"
          id="partner_agreement.menu_2"
          parent="partner_agreement.menu_root"/>
        <menuitem
          name="Configuration"
          id="partner_agreement.menu_3"
          parent="partner_agreement.menu_root"/>

  </data>
</odoo>
