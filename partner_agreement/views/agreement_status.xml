<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Agreement Status List View-->
    <record model="ir.ui.view" id="partner_agreement_status_list_view">
      <field name="name">Agreement Status List</field>
      <field name="model">partner_agreement.status</field>
      <field name="arch" type="xml">
        <tree default_order='name'>
          <field name="name" string="Status Name"/>
        </tree>
      </field>
    </record>

    <!-- Agreement Status Form View -->
    <record model="ir.ui.view" id="partner_agreement_status_form_view">
      <field name="name">Agreement Status Form</field>
      <field name="model">partner_agreement.status</field>
      <field name="arch" type="xml">
        <form string="Agreements Status Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Status Name" />
              <h1><field name="name" string="Status Name" help="Enter the name of this status."/></h1>
            </div>
            <group>

            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="partner_agreement_action_status">
      <field name="name">Agreement Status</field>
      <field name="res_model">partner_agreement.status</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem
      name="Status"
      id="partner_agreement_status_menu_1"
      parent="partner_agreement.menu_3"
      action="partner_agreement_action_status"/>
  </data>
</odoo>
