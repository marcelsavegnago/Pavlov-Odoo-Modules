<odoo>
  <record id="res_config_settings_view_project_enhancement_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.project.enhancements</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="50"/>
    <field name="inherit_id" ref="project.res_config_settings_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//div[@name='project_time']" position="after">
        <h2>Enhancements</h2>
        <div class="row mt16 o_settings_container">
          <div id="use_templates" class="col-12 col-lg-6 o_setting_box">
            <div class="o_setting_left_pane">
              <field name="module_project_enhancements_templates"/>
            </div>
            <div class="o_setting_right_pane" name="template_project_right_pane">
              <label for="module_project_enhancements_templates"/>
              <div class="text-muted">
                Use Project Templates
              </div>
            </div>
          </div>
          <div id="use_templates" class="col-12 col-lg-6 o_setting_box">
            <div class="o_setting_left_pane">
              <field name="module_project_enhancements_scrum"/>
            </div>
            <div class="o_setting_right_pane" name="template_project_right_pane">
              <label for="module_project_enhancements_scrum"/>
              <div class="text-muted">
                Use Project Scrum
              </div>
            </div>
          </div>
          <div class="col-12 col-lg-6 o_setting_box">
            <div class="o_setting_left_pane">
              <field name="module_project_enhancements_milestones"/>
            </div>
            <div class="o_setting_right_pane">
              <label for="module_project_enhancements_milestones"/>
              <div class="text-muted">
                Use Project Milestones
              </div>
            </div>
          </div>
          <div class="col-12 col-lg-6 o_setting_box">
            <div class="o_setting_left_pane">
              <field name="module_project_enhancements_date_shifting"/>
            </div>
            <div class="o_setting_right_pane">
              <label for="module_project_enhancements_date_shifting"/>
              <div class="text-muted">
                Use Project Task Date Shifting
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
