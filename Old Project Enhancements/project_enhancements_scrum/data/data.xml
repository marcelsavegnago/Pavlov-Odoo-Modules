    </record>
    <record id="project_scrum_point_2" model="project.scrum_point">
      <field name="name">2</field>
      <field name="description">XS</field>
      <field name="point_value">2</field>
      <field name="point_sequence">2</field>
    </record>
    <record id="project_scrum_point_3" model="project.scrum_point">
      <field name="name">3</field>
      <field name="description">S</field>
      <field name="point_value">3</field>
      <field name="point_sequence">3</field>
    </record>
    <record id="project_scrum_point_5" model="project.scrum_point">
      <field name="name">5</field>
      <field name="description">M</field>
      <field name="point_value">5</field>
      <field name="point_sequence">4</field>
    </record>
    <record id="project_scrum_point_8" model="project.scrum_point">
      <field name="name">8</field>
