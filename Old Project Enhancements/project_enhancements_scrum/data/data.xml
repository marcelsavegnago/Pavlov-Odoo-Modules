      <field name="point_sequence">7</field>
    </record>

    <!-- ISSUE TYPES -->
    <record id="project_scrum_issuetype_1" model="project.scrum_issuetype">
      <field name="name">Feature</field>
      <field name="description">A feature is something new that doesn't exist in the current release and hasn't been requested.</field>
      <field name="issuetype_sequence">1</field>
    </record>
    <record id="project_scrum_issuetype_2" model="project.scrum_issuetype">
      <field name="name">Bug</field>
      <field name="description">A bug is something that can be reasonably viewed as a problem.</field>
      <field name="issuetype_sequence">2</field>
    </record>

    <!-- LABELS -->
    <record id="project_scrum_label_1" model="project.scrum_label">
      <field name="name">Example Label</field>
      <field name="description">Labels, as the name implies, can be thought of as a tag or keywords. They add flexibility by allowing you to align issues that are not under the same Project or Task.</field>
    </record>

    <!-- CATEGORIES -->
    <record id="project_scrum_category_1" model="project.scrum_category">
      <field name="name">Example Category</field>
      <field name="description">Categories are a great way to create sections within a project. You can use them to align issues within a project that share common technologies or feature sets, like User Database or eCommerce.</field>
    </record>

    <!-- SOURCES -->
    <record id="project_scrum_source_customer" model="project.scrum_source">
      <field name="name">Customer</field>
      <field name="description">Request/Issue received from the customer.</field>
      <field name="source_sequence">1</field>
    </record>
    <record id="project_scrum_source_internal" model="project.scrum_source">
      <field name="name">Internal</field>
      <field name="description">Request/Issue received from an internal team member.</field>
      <field name="source_sequence">2</field>
    </record>

  </data>
</odoo>
