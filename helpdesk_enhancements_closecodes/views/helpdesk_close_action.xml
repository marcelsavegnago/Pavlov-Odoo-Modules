<odoo>
    <!-- List View-->
    <record model="ir.ui.view" id="helpdesk_close_action_list_view">
      <field name="name">Helpdesk Close Code List View</field>
      <field name="model">helpdesk.closeaction</field>
      <field name="arch" type="xml">
        <tree default_order='name'>
          <field name="name"/>
          <field name="cause_ids"
                 widget="many2many_tags"/>
          <field name="description"/>
          <field name="info_required"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="helpdesk_close_action_form_view">
      <field name="name">Helpdesk Close Code Form</field>
      <field name="model">helpdesk.closeaction</field>
      <field name="arch" type="xml">
        <form string="Helpdesk Close Code">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name" /></h1>
            </div>
            <group>
              <field name="cause_ids"
                     widget="many2many_tags"/>
            </group>
            <group>
              <field name="info_required"/>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record model="ir.actions.act_window" id="helpdesk_action_close_action">
      <field name="name">Ticket Actions Taken</field>
      <field name="res_model">helpdesk.closeaction</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem
      name="Actions Taken"
      id="helpdesk_close_action_menu_1"
      parent="helpdesk_close_code_menu_1"
      sequence="7"
      action="helpdesk_action_close_action"/>

</odoo>
