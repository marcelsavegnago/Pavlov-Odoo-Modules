<odoo>
    <!-- Sequences-->
    <record id="project_scrum_point_seq" model="ir.sequence">
      <field name="name">Project Scrum Point Sequence</field>
      <field name="code">project.scrum_point</field>
      <field name="prefix">0</field>
      <field name="padding">1</field>
    </record>

    <!-- List View-->
    <record id="project_scrum_point_view_list" model="ir.ui.view">
      <field name="name">Project Scrum Point List</field>
      <field name="model">project.scrum_point</field>
      <field name="arch" type="xml">
        <tree editable="top">
          <field name="point_sequence"
                 widget="handle"/>
          <field name="name"/>
          <field name="description"/>
          <field name="point_value"/>
        </tree>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record id="project_scrum_point_action" model="ir.actions.act_window">
      <field name="name">Project Points</field>
      <field name="res_model">project.scrum_point</field>
      <field name="view_mode">tree</field>
    </record>

    <!-- Menu Items -->
    <menuitem
      name="Story Points"
      id="project_scrum_point_menu"
      parent="scrum_configuration_section_menu"
      sequence="80"
      action="project_scrum_point_action"/>
</odoo>
