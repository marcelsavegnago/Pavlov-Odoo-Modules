<odoo>
    <!-- Sequences-->
    <record model="ir.sequence" id="project_scrum_epic_seq">
      <field name="name">Project Epic Sequence</field>
      <field name="code">project.scrum_epic</field>
      <field name="prefix">0</field>
      <field name="padding">1</field>
    </record>

    <!-- List View-->
    <record model="ir.ui.view" id="project_scrum_epic_view_list">
      <field name="name">Project Epic List</field>
      <field name="model">project.scrum_epic</field>
      <field name="arch" type="xml">
        <tree default_order='epic_sequence'>
          <field name="epic_sequence"
                 widget="handle"/>
          <field name="name"/>
          <field name="description"/>
          <field name="priority"
                 widget="priority"/>
          <field name="affects_versions"
            widget="many2many_tags"/>
          <field name="labels"
            widget="many2many_tags"/>
          <field name="fix_versions"
            widget="many2many_tags"/>
          <field name="project_tasks"/>
          <field name="progress"
                 widget="progressbar"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="project_scrum_epic_view_form">
      <field name="name">Project Epic Form</field>
      <field name="model">project.scrum_epic</field>
      <field name="arch" type="xml">
        <form string="Epic Form">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name" /></h1>
            </div>
            <group colspan="2" col="4">
              <field name="project_id"/>
              <field name="progress"
                     widget="progressbar"/>
              <field name="priority"
                     widget="priority"/>
              <field name="affects_versions"
                     widget="many2many_tags"
                     options="{'color_field': 'color'}"
                     domain="[('project_id','=', project_id),('status','=','released')]"/>
              <field name="labels"
                     widget="many2many_tags"
                     options="{'color_field': 'color'}"/>
              <field name="fix_versions"
                     widget="many2many_tags"
                     options="{'color_field': 'color'}"
                     domain="[('project_id','=', project_id),('status','=','unreleased')]"/>
            </group>
            <group>
              <field name="description"/>
            </group>
            <group string="Project Tasks">
              <field name="project_tasks"
                     nolabel="1"
                     widget="many2many"
                     domain="[('project_id','=', project_id), ('epic_id','=',False)]"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Search View -->
    <record model="ir.ui.view" id="project_scrum_epic_view_search">
      <field name="name">Project Epic Search</field>
      <field name="model">project.scrum_epic</field>
      <field name="arch" type="xml">
        <search>
        <field name="name"/>
        <field name="project_id"/>
        <group expand="1" string="Group By">
            <filter string="Project" name="group_by_project" context="{'group_by':'project_id'}"/>
        </group>
      </search>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="project_scrum_epic_action">
      <field name="name">Project Epics</field>
      <field name="res_model">project.scrum_epic</field>
      <field name="context">{'group_by': 'project_id'}</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem
      name="All Epics"
      id="project_scrum_epic_menu"
      parent="project_scrum_main_menu"
      sequence="30"
      action="project_scrum_epic_action"/>
</odoo>
