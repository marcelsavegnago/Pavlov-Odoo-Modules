<odoo>
    <record id="pavlov_media_fsm_location_inherit_view_form" model="ir.ui.view">
        <field name="model">fsm.location</field>
        <field name="inherit_id" ref="fieldservice.fsm_location_form_view"/>
        <field name="arch" type="xml">
            <!-- Add priority field to location Form
            <field name="ref" position="after">
                <field name="priority"
                       options="{'no_create': True, 'no_open': True}"/>
            </field>-->
        </field>
    </record>

    <!-- Search View -->
    <record id="fsm_location_search_view" model="ir.ui.view">
        <field name="name">fsm.location.search.view</field>
        <field name="model">fsm.location</field>
        <field name="inherit_id" ref="fieldservice.fsm_location_search_view"/>
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <filter string="Service Locations"
                        name="service_locations"
                        domain="[('category_id', 'like', 'Service Location')]"/>
                <filter string="Units"
                        name="units"
                        domain="[('category_id', 'like', 'Unit')]"/>
                <separator/>
                <filter string="COLO"
                        name="colo"
                        domain="[('category_id', 'like', 'COLO')]"/>
                <filter string="METRO"
                        name="metro"
                        domain="[('category_id', 'like', 'METRO')]"/>
            </field>
        </field>
    </record>
</odoo>
