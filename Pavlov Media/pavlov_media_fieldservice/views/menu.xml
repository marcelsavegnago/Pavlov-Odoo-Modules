<odoo>
    <!-- Helpdesk Dashboard -->
    <record id="action_fieldservice_ticket_dashboard" model="ir.actions.act_window">
        <field name="name">Helpdesk Overview</field>
        <field name="res_model">helpdesk.team</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="helpdesk.helpdesk_team_view_kanban"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Your teams will appear here
            </p>
        </field>
    </record>

    <!-- Open Tickets -->
    <record id="action_fieldservice_ticket" model="ir.actions.act_window">
        <field name="name">Active Tickets</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_id" ref="helpdesk.helpdesk_tickets_view_tree"/>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="helpdesk.helpdesk_tickets_view_search"/>
        <field name="context">{'search_default_is_open': 1}</field>
    </record>

    <!-- Contacts -->
    <record id="action_fieldservice_partner" model="ir.actions.act_window">
          <field name="name">Contacts</field>
          <field name="res_model">res.partner</field>
          <field name="view_id" ref="base.view_partner_tree"/>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="search_view_id" ref="base.view_res_partner_filter"/>
          <field name="context">{'search_default_type_person':1}</field>
    </record>

    <!-- Open Tickets Menu -->
    <menuitem id="menu_fieldservice_helpdesk_tickets"
              name="All Tickets"
              action="action_fieldservice_ticket"
              parent="fieldservice.data"
              sequence="100"/>

    <!-- Helpdesk Dashboard Menu -->
    <menuitem id="menu_fieldservice_helpdesk_ticket_dashboard"
              name="Helpdesk"
              action="action_fieldservice_ticket_dashboard"
              parent="fieldservice.dashboard"
              sequence="30"/>

    <!-- Contacts Menu -->
    <menuitem id="fieldservice.menu_fsm_customer"
              name="Contacts"
              action="action_fieldservice_partner"
              parent="fieldservice.data"
              sequence="10"/>
</odoo>
