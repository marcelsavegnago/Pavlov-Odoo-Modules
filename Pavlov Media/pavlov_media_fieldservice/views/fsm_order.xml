<odoo>
    <record id="fsm_order_view" model="ir.ui.view">
        <field name="name">fsm.order.form</field>
        <field name="model">fsm.order</field>
        <field name="inherit_id" ref="fieldservice.fsm_order_form"/>
        <field name="arch" type="xml">
            <field name="equipment_id" position="attributes">
                <attribute name="attrs">
                    {'required': [('type', 'in', ('maintenance', 'repair', 'rma'))]}
                </attribute>
            </field>

            <!-- Remove Create option on Location -->
            <field name="location_id" position="attributes">
              <attribute name="options">{'no_create': True}</attribute>
            </field>

            <!-- Remove Create option on Contact -->
            <field name="customer_id" position="attributes">
              <attribute name="options">{'no_create': True}</attribute>
            </field>

            <!-- Remove Create/Edit option on Assigned To -->
            <field name="person_id" position="attributes">
              <attribute name="options">{'no_create': True}</attribute>
            </field>

            <!-- Make Description Required -->
            <field name="description" position="attributes">
              <attribute name="required">1</attribute>
            </field>

            <!-- Make Description Required -->
            <field name="request_early" position="attributes">
              <attribute name="required">1</attribute>
            </field>

            <!-- Make Description Required -->
            <field name="request_late" position="attributes">
              <attribute name="required">1</attribute>
            </field>
        </field>
    </record>
</odoo>
