<odoo>

    <!-- Sequences-->
    <record id="bwchange_speed_seq" model="ir.sequence">
        <field name="name">BW Change Speed Sequence</field>
        <field name="code">bwchange.speed</field>
        <field name="prefix">0</field>
        <field name="padding">1</field>
    </record>

    <!-- List View-->
    <record id="bwchange_speed_view_list" model="ir.ui.view">
        <field name="name">BW Change Speed List View</field>
        <field name="model">bwchange.speed</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="speed_sequence"
                       widget="handle"
                       groups="base.group_no_one"/>
                <field name="name"/>
                <field name="description"/>
                <field name="id"
                       attrs="{'readonly': True}"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="bwchange_speed_view_form" model="ir.ui.view">
        <field name="name">BW Change Speed Form</field>
        <field name="model">bwchange.speed</field>
        <field name="arch" type="xml">
            <form string="BW Change speed">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Name" />
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions opening views on models -->
    <record id="bwchange_speed_action" model="ir.actions.act_window">
        <field name="name">speeds</field>
        <field name="res_model">bwchange.speed</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem
            name="Speeds"
            id="bwchange_speed_menu"
            parent="bwchange_change_configuration_menu"
            action="bwchange_speed_action"
            sequence="20"/>

</odoo>
