<odoo>

    <!-- Sequences-->
    <record id="bwchange_stage_seq" model="ir.sequence">
        <field name="name">BW Change Stage Sequence</field>
        <field name="code">bwchange.stage</field>
        <field name="prefix">0</field>
        <field name="padding">1</field>
    </record>

    <!-- List View-->
    <record id="bwchange_stage_view_list" model="ir.ui.view">
        <field name="name">BW Change Stage List View</field>
        <field name="model">bwchange.stage</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="stage_sequence"
                       widget="handle"
                       groups="base.group_no_one"/>
                <field name="name"/>
                <field name="description"/>
                <field name="fold"/>
                <field name="default_state"
                       required="1"/>
                <field name="id"
                       attrs="{'readonly': True}"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="bwchange_stage_view_form" model="ir.ui.view">
        <field name="name">BW Change Stage Form</field>
        <field name="model">bwchange.stage</field>
        <field name="arch" type="xml">
            <form string="BW Change Stage">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Name" />
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <field name="description"/>
                        <field name="default_state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions opening views on models -->
    <record id="bwchange_stage_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">bwchange.stage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem
            name="Stages"
            id="bwchange_stage_menu"
            parent="bwchange_change_configuration_menu"
            action="bwchange_stage_action"
            sequence="10"/>
</odoo>
