<odoo>
    <record id="fsm_location_form" model="ir.ui.view">
        <field name="model">fsm.location</field>
        <field name="inherit_id" ref="fieldservice.fsm_location_form_view"/>
        <field name="arch" type="xml">
            <button name="action_view_contacts" position="after">
                <button name="action_view_bwchange"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        groups="bwchange.bwchange_group_readonly"
                        context="{'default_location_id': active_id,
                                  'default_partner_id': owner_id}">
                    <field name="bwchange_count"
                           widget="statinfo"
                           string="BW Changes"/>
                </button>
            </button>
        </field>
    </record>
</odoo>
