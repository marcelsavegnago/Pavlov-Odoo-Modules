<?xml version="1.0"?>
<odoo>

    <!-- This holds the security groups -->
    <record model="ir.module.category" id="module_bwchanges_category">
        <field name="name">Bandwidth Changes</field>
        <field name="description">User access level for Bandwidth Changes</field>
        <field name="sequence">3</field>
    </record>

    <record id="bwchange_group_readonly" model="res.groups">
        <field name="name">User (Read Only)</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_bwchanges_category"/>
    </record>

    <record id="bwchange_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('bwchange_group_readonly'))]"/>
        <field name="category_id" ref="module_bwchanges_category"/>
    </record>

    <record id="bwchange_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('bwchange_group_user'))]"/>
        <field name="category_id" ref="module_bwchanges_category"/>
    </record>

</odoo>
