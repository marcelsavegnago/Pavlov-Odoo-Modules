<odoo>
    <!-- Sequences-->
    <record id="partner_sensitivity_seq" model="ir.sequence">
      <field name="name">Sensitivity Sequence</field>
      <field name="code">partner.sensitivity</field>
      <field name="prefix">0</field>
      <field name="padding">1</field>
    </record>

    <!-- List View -->
    <record id="partner_sensitivity_view_list" model="ir.ui.view">
      <field name="name">Sensitivity List</field>
      <field name="model">partner.sensitivity</field>
      <field name="arch" type="xml">
        <tree string="Sensitivity Level">
          <field name="sequence" widget="handle"/>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record id="partner_sensitivity_view_form" model="ir.ui.view">
      <field name="name">Sensitivity Form</field>
      <field name="model">partner.sensitivity</field>
      <field name="arch" type="xml">
        <form string="Sensitivity Level">
          <sheet>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Name" />
              <h1><field name="name" /></h1>
            </div>
            <group>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Actions opening views on models -->
    <record id="partner_sensitivity_action" model="ir.actions.act_window">
      <field name="name">Sensitivity Level Action</field>
      <field name="res_model">partner.sensitivity</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem
      name="Sensitivity Levels"
      id="res_partner_sensitivity_menu"
      parent="contacts.res_partner_menu_config"
      action="partner_sensitivity_action"
      sequence="101"/>
</odoo>
