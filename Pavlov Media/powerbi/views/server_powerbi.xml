<?xml version="1.0"?>
<odoo>

    <record id="action_make_testing" model="ir.actions.server">
        <field name="name">Open PowerBI URL</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_server_powerbi"/>
        <field name="state">code</field>
        <field name="code">action = model.open_url()</field>
    </record>

    <!-- Top menu -->
    <menuitem name="PowerBI"
              id="powerbi_menu_root"
              web_icon="powerbi,static/description/icon.png"
              groups="powerbi.powerbi_group_user"
              sequence="309"
              action="action_make_testing"/>

</odoo>
