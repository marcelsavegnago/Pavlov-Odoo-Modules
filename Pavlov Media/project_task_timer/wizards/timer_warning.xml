<odoo>
  <!-- Form View -->
  <record id="timer_warning_view_form" model="ir.ui.view">
    <field name="name">Timer Warning</field>
    <field name="model">timer_warning</field>
    <field name="arch" type="xml">
      <form string="Warning!">
        <sheet>
          You can only have 1 timer running at one time. Please complete your current timer and try again.
          <group>
            <field name="timer_id" invisible="1"/>
            <field name="task_id" invisible="1"/>
          </group>
          <footer>
            <button name="open_task"
                    type="object"
                    class="oe_highlight"
                    string="Open Task"
                    attrs="{'invisible': [('task_id', '=', False)]}"/>
            <button special="cancel" string="Cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="timer_stop_warning_view_form" model="ir.ui.view">
    <field name="name">Timer Stop Warning</field>
    <field name="model">timer_warning</field>
    <field name="arch" type="xml">
      <form string="Warning!">
        <sheet>
          You don't have any active timers on this record.
        </sheet>
        <footer>
          <button special="cancel" string="Cancel"/>
        </footer>
      </form>
    </field>
   </record>
</odoo>
